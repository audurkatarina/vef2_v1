<%- include('header') -%>

  <header class="heading heading--main">
    <h1 class="heading__title"><%= title %></h1>
  </header>
  <main>
    <div class="list">
      <% categories.forEach((category) => { %>
      <div class="list__row">
        <h2><%= category.title %></h2>
        <% category.videos.forEach((video) => { %>
          <div class="list__col">
            <a href="/<%= videos[video-1].id %>" class="listItem">
              <div class="listItem__image <%= !videos[video-1].poster ? 'listItem__image--empty' : '' %>">
                <% if (videos[video-1].poster) { %>
                  <img src="<%= videos[video-1].poster %>" alt="">
                <% } %>
                <div>
                  <%- locals.setDuration(videos[video-1].duration) %>
              </div>
              </div>
              <div class="listItem__bottom">
                <div class="listItem__texts">
                  <h2 class="listItem__title">
                    <%= videos[video-1].title %>
                  </h2>
                  <%- locals.setCreated(videos[video-1].created) %>
                </div>
              </div>
            </a>
          </div>
        <% }) %>
      </div>
      <% }) %>
    </div>
    <p>&#169; Fræðslumyndbandaleiga</p>
  </main>

<%- include('footer') -%>